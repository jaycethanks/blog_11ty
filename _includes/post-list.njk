{% if posts %}
    <ol style="margin-bottom:4em">
        {% for post in posts | reverse %}
            <li>
                <a href="{{ post.url | url }}">{{ post.data.title }}</a>
                <div>
                    <time datetime="{{ post.date }}">#{{ post.date | formatDate }}</time>
                </div>
            </li>
        {% endfor %}
    </ol>
{% endif %}